# RAG-ENTERPRISE Environment Variables

# API Configuration
API_PREFIX=/api/v1
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True

# Database
DATABASE_URL=sqlite:///./data/rag_enterprise.db
# For PostgreSQL: postgresql://user:password@localhost/rag_enterprise

# Azure OpenAI (Optional)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Storage
STORAGE_PATH=/tmp/rag-enterprise/storage
UPLOAD_MAX_SIZE=10485760

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=/tmp/rag-enterprise/logs/api.log

# Dify Integration
DIFY_API_KEY=your-dify-api-key
DIFY_BASE_URL=http://localhost:8001/api
DIFY_ENV=development

# LLM Models
PORTFOLIO_AGENT_MODEL=gpt-4
RISK_AGENT_MODEL=gpt-4
MARKET_AGENT_MODEL=gpt-4
COMPLIANCE_AGENT_MODEL=gpt-4
SUMMARIZER_AGENT_MODEL=gpt-3.5-turbo
RESEARCHER_AGENT_MODEL=gpt-4
QA_AGENT_MODEL=gpt-3.5-turbo

# Knowledge Base IDs
KB_FINANCE=
KB_RISK=
KB_MARKET=
KB_COMPLIANCE=
KB_RESEARCH=
KB_GENERAL=

# Agent Configuration
AGENT_MEMORY_ENABLED=true
AGENT_MEMORY_TYPE=full
AGENT_MAX_TOKENS=2000
AGENT_TEMPERATURE=0.7

